extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/forms.css")
  link(rel="stylesheet", href="/css/auth.css")

block content
  main
    if Object.keys(flash).length
      .user-message.user-message--error
        = flash['error']

    form.login-form(action='/update-password' method='POST')
      input(type="hidden" name="_csrf" value=csrfToken)
      input(type="hidden" name="userId" value=userId)
      input(type="hidden" name="token" value=token)

      .form-control
        label(for='password') Password
        input#password(type="password", name="password")

      //- .form-control
      //-   label(for='password_confirmation') Password Confirmation
      //-   input#password_confirmation(type="password", name="password_confirmation")

      button.btn(type='submit')
        | Update Password

