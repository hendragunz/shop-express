extends ../layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/forms.css")
  link(rel="stylesheet", href="/css/product.css")

block content
  main
    form.product-form(action=(editing ? '/admin/edit-product' : '/admin/add-product') method='POST')
      input(type="hidden", name="productId" value=product.id)
      .form-control
        label(for='title') Title
        input#title(type='text' name='title' value=product.title)

      .form-control
        label(for='imageUrl') Image URL
        input#imageUrl(type='text' name='imageUrl' value=product.imageUrl)

      .form-control
        label(for='price') Price
        input#price(type='number' name='price' step="0.01" value=product.price)

      .form-control
        label(for='description') Description
        textarea#description(rows='5' name='description')
          = product.description

      button.btn(type='submit')
        if editing
          | Update Product

        else
          | Add Product

